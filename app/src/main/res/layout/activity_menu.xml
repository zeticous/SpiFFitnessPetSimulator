<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.orbital.thegame.spiffitnesspetsimulator.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="status"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:id="@+id/status_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Species:"
            android:textStyle="bold"
            android:id="@+id/species_name_header"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/spiritIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sprit_slime_idle1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Slime"
            android:id="@+id/species_name"
            android:layout_below="@+id/species_name_header"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:paddingLeft="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/view_fullheart"
            android:id="@+id/affinity_label"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxExp"
            android:text="TheGame"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="settings"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:id="@+id/settings_header"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/notification_switch"
        android:textColor="@android:color/white"
        android:thumbTint="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textSize="24sp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:id="@+id/bluetooth_switch"
        android:textColor="@android:color/white"
        android:thumbTint="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:enabled="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RELEASE"
        android:id="@+id/release_button"
        />


</LinearLayout>
